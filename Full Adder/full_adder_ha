// Code your design here
module half_adder(input a, b, output sum, carry);
  assign sum = a^b;
  assign carry = a & b;
endmodule

module full_adder(input a, b, cin, output sum_out, carry_out);
  wire s, c0, c1;
  half_adder HA1 (a, b, s, c0);
  half_adder HA2 (s, cin, sum_out, c1);
  
  assign carry_out = c0 | c1;
endmodule
